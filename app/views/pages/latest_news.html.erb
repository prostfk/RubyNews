<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= page.name %>
        </td>
        <td>
          <%= link_to 'Edit', edit_page_path(page) %>
        </td>
        <td>
          <%= link_to 'Delete', page_path(page), method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>

    <% end %>
  </tbody>

</table>
